            </dependency>
            <dependency>
                <groupId>org.entando.entando.plugins</groupId>
                <artifactId>entando-plugin-jacms</artifactId>
                <version>${entando-plugin-jacms.version}</version>
                <type>test-jar</type>
                <scope>test</scope>    
            </dependency>
            <!--jpmail-->
            <dependency>
                <groupId>org.entando.entando.plugins</groupId>
                <artifactId>entando-plugin-jpmail</artifactId>
                <version>${entando-plugin-jpmail.version}</version>
                <classifier>classes</classifier>
            </dependency>
            <dependency>
                <groupId>org.entando.entando.plugins</groupId>
                <artifactId>entando-plugin-jpmail</artifactId>
                <version>${entando-plugin-jpmail.version}</version>
                <type>war</type>
            </dependency>
            <dependency>
                <groupId>org.entando.entando.plugins</groupId>
                <artifactId>entando-plugin-jpmail</artifactId>
                <version>${entando-plugin-jpmail.version}</version>
                <scope>test</scope>
